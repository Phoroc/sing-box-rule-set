{
  "log": {
    "level": "warn"
  },
  "dns": {
    "servers": [
      {
        "tag": "dns_direct",
        "address": "local",
        "detour": "direct"
      },
      {
        "tag": "dns_block",
        "address": "rcode://success"
      }
    ],
    "rules": [
      {
        "rule_set": "hagezi-normal",
        "server": "dns_block"
      }
    ]
  },
  "route": {
    "rule_set": [
      {
        "tag": "hagezi-normal",
        "type": "remote",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/Phoroc/sing-box-rule-set/rule-set/multi-onlydomains.txt.srs"
      }
    ],
    "rules": [
      {
        "protocol": "dns",
        "outbound": "dns-out"
      }
    ]
  },
  "inbounds": [
    {
        "type": "tun",
        "tag": "tun-in",
        "inet4_address": "172.19.0.1/30",
        "auto_route": true,
        "strict_route": true,
        "stack": "system",
        "sniff": true,
        "sniff_override_destination": false
      }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "dns",
      "tag": "dns-out"
    }
  ],
  "experimental": {
    "cache_file": {
      "enabled": true
    }
  }
}
